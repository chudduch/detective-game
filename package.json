{
  "name": "detective-game",
  "version": "1.0.0",
  "description": "Мультиплеерная браузерная детективная игра с WebSocket",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "client": "live-server src/client --port=8080",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "init-db": "node scripts/init-db.js",
    "lint": "eslint src/ server/",
    "test": "jest",
    "build:css": "postcss src/client/css/styles.css -o dist/css/styles.min.css"
  },
  "keywords": [
    "game",
    "detective",
    "multiplayer",
    "websocket",
    "browser-game"
  ],
  "author": "chudduch",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "live-server": "^1.2.2",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chudduch/detective-game.git"
  },
  "bugs": {
    "url": "https://github.com/chudduch/detective-game/issues"
  },
  "homepage": "https://github.com/chudduch/detective-game#readme",
  "browserslist": [
    "last 2 versions",
    "not dead"
  ]
}
